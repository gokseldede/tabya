
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("Partial/_AdDetailPartial")
@section Scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace(content);
            $('#tags').multiselect({ nonSelectedText: 'Diğer Özellikler', includeSelectAllOption: true });
            $('#socials').multiselect({ nonSelectedText: 'Sosyal Özellikler', includeSelectAllOption: true });
            $('#securitys').multiselect({ nonSelectedText: 'Güvenlik Özellikleri', includeSelectAllOption: true });

            $('.dropdown-menu, .dropdown-menu li').click(function (e) {
                e.stopPropagation();
            });
            $("#money-bank").priceFormat({
                prefix: '',
                centsLimit: 0
            });

            $("#myForm").submit(function () {
                $("#money-bank").val($("#money-bank").unmask());
            });

        });
    </script>
}