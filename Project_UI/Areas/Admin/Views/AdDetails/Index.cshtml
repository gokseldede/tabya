@model Project_UI.Areas.Admin.Models.AdListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            İlan Listesi
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>ilan Adı</th>
                            <th>İlan Tipi</th>
                            <th>Durumu</th>
                            <th>Vitrin Durumu</th>
                            <th class="hidden-480">Oluşturma Tarihi</th>
                            <th class="hidden-480">Güncelleme Tarihi</th>
                            <th>Procces</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AdDetails)
                        {
                            <tr id="a_@item.Id">
                                <td><img src="@item.ThumbPath" width="40" height="40" /></td>
                                <td>@item.Name</td>
                                <td>Ad</td>

                                <td id="b_@item.Id" data-status="@item.IsActive" onclick="Status('/Admin/AdDetails/Status/',@item.Id,this)"><span class="btn btn-@(item.IsActive ? "info" : "default") btn-sm">@(item.IsActive ? "Aktif" : "Pasif")</span></td>


                                <td id="c_@item.Id" data-status="@item.IsInVitrin" onclick="Vitrin('/Admin/AdDetails/Vitrin/',@item.Id,this)"><span class="btn btn-@(item.IsInVitrin ? "info" : "default") btn-sm">@(item.IsInVitrin ? "Vitrine Eklendi" : "Vitrine Ekle")</span></td>


                                <td class="hidden-480">@item.CreatedDateTime.ToShortDateString()</td>
                                <td class="hidden-480">@item.UpdatedDateTime</td>
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">

                                        <a class="btn btn-xs btn-primary no-radius" href="/Admin/AdDetails/Edit/@item.Id">
                                            <i class="ace-icon fa fa-pencil-square-o smaller-100"></i>
                                            Düzenle
                                        </a>

                                        <a class="btn btn-xs btn-danger btn-sm" onclick="Delete('/Admin/AdDetails/Delete/',@item.Id)">
                                            <i class="ace-icon fa fa-trash-o smaller-100"></i>
                                            Sil
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                işlem <i class="ace-icon fa fa-caret-down icon-only bigger-150"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                                <li>
                                                    <a href="/Admin/AdDetails/Edit/@item.Id" class="btn btn-info btn-sm">

                                                        <i class="ace-icon fa fa-pencil-square-o smaller-100"></i>
                                                        Düzenle

                                                    </a>
                                                </li>

                                                <li>
                                                    <a class="btn btn-xs btn-danger btn-sm" onclick="Delete('/Admin/AdDetails/Delete/',@item.Id)" data-rel="tooltip" title="" data-original-title="Delete">

                                                        <i class="ace-icon fa fa-trash-o smaller-100"></i>
                                                        Sil

                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
