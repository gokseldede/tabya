@model AdminUserViewModel

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            @if (Model != null)
            {
                <h5> Yönetici Düzenleme</h5>
            }
            else
            {
                <h5> Yönetici Ekleme</h5>
            }
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    @using (Html.BeginForm())
                    {
                       <label>Ad :</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                        <label>Soyad :</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })

                        <label>Email :</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @required = "required", @type = "email" })
                        if (ViewBag.error2 != null)
                        {
                            <h5 class="alert-danger">@ViewBag.error2</h5>
                        }

                        <label>Telefon Numarası :</label>
                        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })

                        if (@Model != null)
                        {
                            <label>Parola :</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control",@type="password" })

                        }
                        else
                        {
                            <label>Parola :</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })

                        }

                        <label>Parola Tekrarı :</label>
                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @type = "password" })

                        if (ViewBag.error != null)
                        {
                            <h5 class="alert-danger">@ViewBag.error</h5>
                        }

                        <br />
                        <button type="submit" value="Save" class="btn btn-xs btn-success btn-xs radius-4">
                            <i class="ace-icon fa fa-floppy-o bigger-160"></i>
                            Kaydet
                        </button>
                        <a href="/Admin/AdminUsers/Index" class="btn btn-xs btn-info btn-xs radius-4"><i class="ace-icon fa fa-undo bigger-150"> Önceki Sayfa</i></a>
                    }

                </div>
                <!-- /.col-lg-6 (nested) -->
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->


