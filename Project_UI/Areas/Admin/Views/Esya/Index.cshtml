
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model List<Project_Entity.Esya>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Esya Listesi
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th>Durumu</th>
                            <th class="hidden-480">Oluşturma Tarihi</th>
                            <th class="hidden-480">Güncelleme Tarihi</th>
                            <th>İşlem</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="a_@item.ID">
                                <td>@item.Name</td>
                                <td id="b_@item.ID" data-status="@item.IsActive" onclick="Status('/Admin/Esya/Status/',@item.ID,this)"><span class="btn btn-@(item.IsActive ? "info" : "default") btn-sm">@(item.IsActive ? "Aktif" : "Pasif")</span></td>

                                <td class="hidden-480">@item.CreatedDate.ToShortDateString()</td>
                                <td class="hidden-480">@item.UpdatedDate</td>
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">

                                        <a class="btn btn-xs btn-primary no-radius" href="/Admin/Esya/Edit/@item.ID">
                                            <i class="ace-icon fa fa-pencil-square-o smaller-100"></i>
                                            Düzenle
                                        </a>

                                        <a class="btn btn-xs btn-danger btn-sm" onclick="Delete('/Admin/Esya/Delete/',@item.ID)">
                                            <i class="ace-icon fa fa-trash-o smaller-100"></i>
                                            Sil
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                İşlem <i class="ace-icon fa fa-caret-down icon-only bigger-150"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                                <li>
                                                    <a href="/Admin/Esya/Edit/@item.ID" class="btn btn-info btn-sm">

                                                        <i class="ace-icon fa fa-pencil-square-o smaller-100"></i>
                                                        Düzenle

                                                    </a>
                                                </li>

                                                <li>
                                                    <a class="btn btn-xs btn-danger btn-sm" onclick="Delete('/Admin/Esya/Delete/',@item.ID)" data-rel="tooltip" title="" data-original-title="Delete">

                                                        <i class="ace-icon fa fa-trash-o smaller-100"></i>
                                                        Sil

                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

