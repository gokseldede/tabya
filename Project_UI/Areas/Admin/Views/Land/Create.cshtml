
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("Partial/_LandPartial")
@section Scripts{
    <script>
        $(document).ready(function () {

            CKEDITOR.replace(content);
            $(".money-bank").each(function (ind, obj) {
                $(obj).priceFormat({
                    prefix: '',
                    centsLimit: 0
                });
            });

            $("#myForm").submit(function () {
                $(".money-bank").each(function (ind, obj) {
                   $(obj).val($(obj).unmask());
                });
            });

        });
    </script>
}