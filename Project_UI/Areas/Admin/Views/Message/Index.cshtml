
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<Project_Entity.Message>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Mesaj Tablosu
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>EMail</th>
                                <th>Durumu</th>
                                <th class="hidden-480">Oluşturma Tarihi</th>
                                <th>İşlem</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID" class="odd gradeX">
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    @if (item.IsActive)
                                    {
                                        <td id="b_@item.ID" onclick="Status('/Admin/Message/Status/',@item.ID)"><span class="btn btn-info btn-sm">Aktif</span></td>
                                    }
                                    else
                                    {
                                        <td id="b_@item.ID" onclick="Status('/Admin/Message/Status/',@item.ID)"><span class="btn btn-default btn-sm">Pasif</span></td>
                                    }

                                    <td class="hidden-480">@item.CreatedDate</td>

                                    <td>
                                        <a href="/Admin/Message/Detail/@item.ID" class="fa fa-pencil" style="cursor:pointer"></a>
                                        <span class="fa fa-trash-o" style="cursor:pointer" onclick="Delete('/Admin/Message/Delete/',@item.ID)"></span>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


