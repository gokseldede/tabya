
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model Project_Entity.Photo
<h2>Upload Images</h2>
<div class="well">
    @using (Html.BeginForm("Create", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(m => Model.AdDetail, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                   @Html.DropDownListFor(x => x.AdDetailID, ViewData["Ilan"] as IEnumerable<SelectListItem>, "Ilan Seçiniz", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AdDetail)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Choose Image(s)", new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    <input type="file" name="files"
                           multiple="multiple" accept=".jpg, .png, .gif" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <div style="color:red">
                        @ViewBag.error
                    </div>
                </div>
            </div>
        </div>
    }
</div>