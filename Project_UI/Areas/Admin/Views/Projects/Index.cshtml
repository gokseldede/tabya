@model List<ProjectViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Proje Listesi
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th class="hidden-480">Firma</th>
                            <th>Teslim Tarihi</th>
                            <th>Durumu</th>
                            <th class="hidden-480">Oluşturma Tarihi</th>
                            <th class="hidden-480">Güncelleme Tarihi</th>
                            <th>İşlem</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="a_@item.Id">
                                <td>@item.Name</td>
                                <td class="hidden-480">@item.ProjectFirm</td>
                                <td>@item.ProjectDeliveryDate</td>
                                @if (item.IsActive)
                                {
                                    <td id="b_@item.Id" onclick="Status('/Admin/Projects/Status/',@item.Id)"><span class="btn btn-info btn-sm">Aktif</span></td>
                                }
                                else
                                {
                                    <td id="b_@item.Id" onclick="Status('/Admin/Projects/Status/',@item.Id)"><span class="btn btn-default btn-sm">Pasif</span></td>
                                }

                                <td class="hidden-480">@item.CreatedDateTime.ToShortDateString()</td>
                                <td class="hidden-480">@item.UpdatedDateTime</td>
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">

                                        <a class="btn btn-xs btn-primary no-radius" href="/Admin/Projects/Edit/@item.Id">
                                            <i class="ace-icon fa fa-pencil-square-o smaller-100"></i>
                                            Düzenle
                                        </a>

                                        <a class="btn btn-xs btn-danger btn-sm" onclick="Delete('/Admin/Projects/Delete/',@item.Id)">
                                            <i class="ace-icon fa fa-trash-o smaller-100"></i>
                                            Sil
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                İşlem <i class="ace-icon fa fa-caret-down icon-only bigger-150"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                                <li>
                                                    <a href="/Admin/Projects/Edit/@item.Id" class="btn btn-info btn-sm">

                                                        <i class="ace-icon fa fa-pencil-square-o smaller-100"></i>
                                                        Düzenle

                                                    </a>
                                                </li>

                                                <li>
                                                    <a class="btn btn-xs btn-danger btn-sm" onclick="Delete('/Admin/Projects/Delete/',@item.Id)" data-rel="tooltip" title="" data-original-title="Delete">

                                                        <i class="ace-icon fa fa-trash-o smaller-100"></i>
                                                        Sil

                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

