
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model WorkPlaceViewModel 
@Html.Partial("Partial/_WorkPartial",Model)

@section Scripts{
    <script>
        $(document).ready(function() {

            $('#tags').multiselect({nonSelectedText: 'Diğer Özellikler',includeSelectAllOption: true});
            $('#socials').multiselect({nonSelectedText: 'Sosyal Özellikler',includeSelectAllOption: true});
            $('#securitys').multiselect({nonSelectedText: 'Güvenlik Özellikleri',includeSelectAllOption: true});

            $('.dropdown-menu, .dropdown-menu li')
                .click(function (e) {
                    e.stopPropagation();
                });

            $('#tags').multiselect("select", @Html.Raw(Json.Encode(Model.SelectedProperties)));
            $('#socials').multiselect("select", @Html.Raw(Json.Encode(Model.SelectedSocialList)));
            $('#securitys').multiselect("select", @Html.Raw(Json.Encode(Model.SelectedSecurities)));
        });
    </script>
}