@model Project_UI.Models.AdDetailDetailViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section class="section ilan-detay">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="gallery wow fadeInUp" data-wow-duration="1s">
                    @*@Html.Partial("Partial/_ImagePartial")*@
                    @if (Model.FileDetails != null)
                    {
                        <div class="galleryBig">
                            @foreach (var item in Model.FileDetails)
                            {
                                <div class="item cbp-item">

                                    <a class="cbp-lightbox" data-title="ilk1" data-lightbox="roadtrip" href="~/Areas/Admin/Content/Image/@item.Id@item.Extension">

                                        <img src="~/Areas/Admin/Content/Image/@item.Id@item.Extension" height="546" width="817" alt="ev">
                                    </a>
                                </div>
                            }

                        </div>
                        <div class="gallerySmall">
                            @foreach (var item in Model.FileDetails)
                            {
                                <div class="item">
                                    <img src="~/Areas/Admin/Content/Image/@item.Id@item.Extension" height="83" width="125" alt="ev">
                                </div>
                            }
                        </div>
                    }
                </div>

                @*@Html.Partial("Partial/_DetayPartial", Model.Lands)*@

                <div class="box info wow fadeInUp" data-wow-duration="1s">
                    @if (Model.Name != null)
                    {
                        <div class="title">
                            <h2>@Model.Name</h2>
                        </div>
                    }
                    <div class="item">
                        <!-- addClass kiralik  -->
                        <div class="row">
                            @if (Model.Status != null)
                            {
                                <div class="col-xs-6"><span class="type">@Model.Status</span></div>
                            }
                            @if (Model.Price != 0)
                            {
                                <div class="col-xs-6"><span class="price">@Model.Price.ToString("N") @Model.Kur</span></div>
                            }
                        </div>
                        <div class="row">
                            <div class="row">
                                <div class="col-md-12 location">
                                    <p><i class="fa fa-map-marker"></i> @Model.Semt, @Model.Ilce, @Model.Il </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        @if (Model.Expert != null)
                        {
                            <div class="user-img">
                                <img src="@Model.Expert.ImagePath" width="65" height="65" alt="Necmi Körük">
                            </div>

                            <ul class="contact-list">
                                <li><i class="fa fa-user"></i> <strong>@Model.Expert.Name</strong> - @Model.Expert.Title</li>
                                <li><i class="fa fa-phone"></i> <a href="tel:@Model.Expert.PhoneNumber">@Model.Expert.PhoneNumber</a></li>
                                <li><i class="fa fa-envelope"></i> <a href="mailto:@Model.Expert.Email">@Model.Expert.Email</a></li>
                            </ul>
                        }
                    </div>
                    <div class="item info-list">
                        @if (Model.CreatedDateTime != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>İlan Tarihi</strong></div>
                                <div class="col-xs-6">@Model.CreatedDateTime.ToString("dd/MM/yyyy")</div>
                            </div>
                        }
                        @*@if (Model.Land.EmlakTipID != null)
                            {
                                <div class="row">
                                    <div class="col-xs-6"><strong>Emlak Tipi</strong></div>
                                    <div class="col-xs-6">@Model.Land.EmlakTip.Name</div>
                                </div>
                            }*@

                        @if (Model.Size != 0)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>m2</strong></div>
                                <div class="col-xs-6">@Model.Size</div>
                            </div>
                        }
                        @if (Model.SizePrice != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>m2 Fiyat</strong></div>
                                <div class="col-xs-6">@Model.SizePrice.ToString("N") TL</div>
                            </div>
                        }
                        @if (Model.AdaNo != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Ada No</strong></div>
                                <div class="col-xs-6">@Model.AdaNo</div>
                            </div>
                        }
                        @if (Model.Gabari != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Gabari</strong></div>
                                <div class="col-xs-6">@Model.Gabari</div>
                            </div>
                        }
                        @if (Model.Imar != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>İmar</strong></div>
                                <div class="col-xs-6">@Model.Imar</div>
                            </div>
                        }
                        @if (Model.Kaks != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Kaks</strong></div>
                                <div class="col-xs-6">@Model.Kaks</div>
                            </div>
                        }
                        @if (Model.KatKarsiligi != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Kat Karşılığı</strong></div>
                                <div class="col-xs-6">@Model.KatKarsiligi</div>
                            </div>
                        }
                        @if (Model.ParselNo != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Parsel No</strong></div>
                                <div class="col-xs-6">@Model.ParselNo</div>
                            </div>
                        }
                        @if (Model.PaftaNo != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Pafta No</strong></div>
                                <div class="col-xs-6">@Model.PaftaNo</div>
                            </div>
                        }
                        @if (Model.Status != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Emlak Durumu</strong></div>
                                <div class="col-xs-6">@Model.Status</div>
                            </div>
                        }
                        @if (Model.Takas != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Takas Durumu</strong></div>
                                <div class="col-xs-6">@Model.Takas</div>
                            </div>
                        }
                        @if (Model.Tapu != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Tapu Durumu</strong></div>
                                <div class="col-xs-6">@Model.Tapu </div>
                            </div>
                        }
                        @if (Model.KrediDurumu != null)
                        {
                            <div class="row">
                                <div class="col-xs-6"><strong>Krediye Uygun</strong></div>
                                <div class="col-xs-6">@Model.KrediDurumu</div>
                            </div>
                        }

                    </div>
                </div>
                <div class="box details proje-tab wow fadeInUp" data-wow-duration="1s">
                    <div class="tab-menu">
                        <ul>
                            <li class="active" rel="aciklama"><a href="#">AÇIKLAMA</a></li>
                        </ul>
                    </div>
                    <div id="aciklama" class="tab_content">
                        <article class="article">
                            @if (Model.Description != null)
                            {
                                <p>
                                    @Html.Raw(Model.Description)
                                </p>
                            }
                        </article>
                    </div>
                    

                </div>


            </div>
        </div>
    </div>
</section>
